    "eslint": "^8.41.0",
    "eslint-plugin-vitest-globals": "^1.3.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1"
